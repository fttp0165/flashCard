<%if @card.errors.any?%>
<ul>
      <%@card.errors.full_messages.each do |msg| %>
      <li><%=msg%></li>
      <%end%>
</ul>
<%end%>
<%= form_for @card do |f| %>
<div>
      <%=f.label :title%>
      <%= f.text_field :title %><br />
</div>
<div>
      <%=f.label :content%><br />
      <%= f.text_area :content %><br />
</div>
<%=f.submit %>
<% end %>