<h1>卡片列表</h1>

<%= link_to  "新增卡片", new_card_path%>

<%@cards.each do |card|%>
<div class="card">
      <header class="card_title"><%=link_to card.title,card_path(card)%></header>
      <%=link_to "編輯",edit_card_path(card)%>
      <%=link_to "刪除",card_path(card),method:'delete',data:{confirm:"確定刪除"}%>
      <div class="crad_body">
            <p><%= card.content%></p>
      </div>
</div>
<%end%>